<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NabbitManager.Views.OrderDetailPage">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Margin="{StaticResource PageMargin}">
				<ListView x:Name="orderItems"
						  CachingStrategy="RecycleElement"
						  RowHeight="200">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<StackLayout>
									<StackLayout Orientation="Horizontal">
										<Label Text="Name:" FontSize="Medium" />
										<Label Text="{Binding Product.Name}" FontSize="Small"/>
									</StackLayout>
									<StackLayout Orientation="Horizontal">
										<Label Text="Quantity: " FontSize="Medium" />
										<Label Text="{Binding Quantity}" FontSize="Small"/>
									</StackLayout>
									<Label Text="Instructions: " FontSize="Medium" />
									<Label Text="{Binding Instructions}" FontSize="Small"/>
								</StackLayout>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<Label Text="Subtotal:" />
				<Label x:Name="subTotalLabel"/>
				<Label Text="Total:" />
				<Label x:Name="totalLabel"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>